<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecognizeOnLiveVideoActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rearCameraView"
        app:show_fps="true"/>

    <ImageView
        android:id="@+id/plateStaticVideoImageView"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/plate" />

    <ImageView
        android:id="@+id/plateStaticVideoImageView2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/plate" />

    <ImageView
        android:id="@+id/plateStaticVideoImageView3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/plateStaticVideoImageView"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/plate" />

    <ImageView
        android:id="@+id/plateStaticVideoImageView4"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/plateStaticVideoImageView2"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/plate" />


    <TextView
        android:id="@+id/recognitionVideoOutputTextView"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:textSize="20dp"
        android:text="TextView1" />

    <TextView
        android:id="@+id/recognitionVideoOutputTextView2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:textSize="20dp"
        android:text="TextView2" />

    <TextView
        android:id="@+id/recognitionVideoOutputTextView3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/recognitionVideoOutputTextView"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textSize="20dp"
        android:text="TextView3" />

    <TextView
        android:id="@+id/recognitionVideoOutputTextView4"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recognitionVideoOutputTextView2"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textSize="20dp"
        android:text="TextView4" />

    <CheckBox
        android:id="@+id/enableOCRLiveVideoCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_red_light"
        android:text="@string/checkBoxEnableOCR" />

</RelativeLayout>