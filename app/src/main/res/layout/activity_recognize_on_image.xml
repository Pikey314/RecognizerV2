<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecognizeOnImageActivity">


    <Button
        android:id="@+id/pickImageButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="178dp"
        android:layout_marginBottom="0dp"
        android:onClick="pickImageFromGallery" />

    <ImageView
        android:id="@+id/imageToBeRecognizedImageView"
        android:layout_width="match_parent"
        android:layout_height="483dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="0dp"
        android:onClick="recognizeTestMethod1"
        android:text="Button" />



    <ImageView
        android:id="@+id/plateStaticImageView"
        android:layout_width="186dp"
        android:layout_height="49dp"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/plate" />

    <TextView
        android:id="@+id/recognitionImageOutputTextView"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="15dp" />
</RelativeLayout>

