<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecognizeOnImageActivity">


    <Button
        android:id="@+id/pickImageButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="178dp"
        android:layout_marginBottom="0dp"
        android:onClick="pickImageFromGallery" />

    <ImageView
        android:id="@+id/imageToBeRecognizedImageView"
        android:layout_width="match_parent"
        android:layout_height="483dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/plateStaticImageView"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/plate" />

    <ImageView
        android:id="@+id/plateStaticImageView2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/plate" />

    <ImageView
        android:id="@+id/plateStaticImageView3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/plateStaticImageView"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/plate" />

    <ImageView
        android:id="@+id/plateStaticImageView4"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/plateStaticImageView2"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/plate" />


    <TextView
        android:id="@+id/recognitionImageOutputTextView"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:textSize="20dp"
        android:text="TextView1" />

    <TextView
        android:id="@+id/recognitionImageOutputTextView2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:textSize="20dp"
        android:text="TextView2" />

    <TextView
        android:id="@+id/recognitionImageOutputTextView3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/recognitionImageOutputTextView"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textSize="20dp"
        android:text="TextView3" />

    <TextView
        android:id="@+id/recognitionImageOutputTextView4"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recognitionImageOutputTextView2"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textSize="20dp"
        android:text="TextView4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="0dp"
        android:onClick="recognizeTestMethod1"
        android:text="Button" />





</RelativeLayout>

