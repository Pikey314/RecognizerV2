<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecognizeOnGalleryImageActivity">


    <Button
        android:id="@+id/pickImageFromGalleryButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="178dp"
        android:layout_marginBottom="0dp"
        android:onClick="pickImageFromGallery"
        android:text="@string/buttonPickImageFromGallery" />

    <ImageView
        android:id="@+id/imageToBeRecognizedImageView"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:layout_alignParentTop="true"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="0dp"
        android:onClick="recognizeTestMethod1"
        android:text="Button" />
</RelativeLayout>

